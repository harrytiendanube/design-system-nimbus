{
  "name": "monorepo-nimbus",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:TiendaNube/design-system-nimbus.git",
  "author": "tiendanube",
  "scripts": {
    "nimbus": "yarn node .cli",
    "clean": "find . -name node_modules -exec rm -rf '{}' + && rm -rf yarn.lock",
    "refresh": "yarn clean && yarn install",
    "format": "yarn workspace @tiendanube/components format && yarn workspace @tiendanube/storybook format",
    "lint:components": "yarn workspace @tiendanube/components lint",
    "lint:storybook": "yarn workspace @tiendanube/storybook lint",
    "lint": "yarn lint:components && yarn lint:storybook",
    "start:components": "yarn workspace @tiendanube/components start:dev",
    "start:storybook": "yarn workspace @tiendanube/storybook storybook",
    "start:dev": "concurrently \"yarn start:components\" \"yarn start:storybook\"",
    "lerna:publish": "lerna publish"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "contributors": [
    "kelman.celis@tiendanube.com",
    "pablo.radomski@tiendanube.com"
  ],
  "npmClient": "yarn",
  "devDependencies": {
    "concurrently": "5.3.0",
    "lerna": "3.22.1"
  }
}
