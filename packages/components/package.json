{
  "name": "@tiendanube/components",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build-css": "node-sass -r src -o src --output-style compressed",
    "post-css": "postcss src/**/*.css --base src --use autoprefixer -d src",
    "start:dev": "nodemon -e scss -x 'yarn build-css && yarn post-css'",
    "build": "rm -rf dist && tsc && node-sass src -o dist --output-style compressed && postcss dist/**/*.css --base dist --use autoprefixer -d dist",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.28",
    "@fortawesome/free-brands-svg-icons": "5.13.0",
    "@fortawesome/pro-light-svg-icons": "5.13.0",
    "@fortawesome/react-fontawesome": "0.1.9",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "typescript": "3.9.5"
  },
  "devDependencies": {
    "@types/react": "16.9.41",
    "@types/react-dom": "16.9.8",
    "autoprefixer": "^9.7.6",
    "node-sass": "4.14.1",
    "nodemon": "^2.0.4",
    "postcss-cli": "7.1.1"
  },
  "files": [
    "dist"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
