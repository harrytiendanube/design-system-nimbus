{
  "name": "@tiendanube/components",
  "version": "1.0.13",
  "description": "shareable tiendanube's components",
  "author": "tiendanube",
  "license": "MIT",
  "repository": "@tiendanube/components",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "flush": "rm -rf dist",
    "build": "concurrently \"yarn flush\" \"microbundle-crl --no-compress --format modern,cjs\"",
    "start": "concurrently \"yarn flush\" \"microbundle-crl watch --no-compress --format modern,cjs\"",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "prepublish": "run-s build",
    "test": "run-s test:unit test:lint test:build check:size",
    "test:build": "run-s build",
    "test:lint": "eslint --quiet --ext .ts,.tsx",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "format": "prettier --write \"src/**/*.tsx\"",
    "lint": "cd ../.. && eslint packages/components/src/**/*.{ts,tsx}",
    "lint-staged": "cd ../.. && eslint --ext .ts,.tsx",
    "check:size": "size-limit"
  },
  "peerDependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@size-limit/preset-big-lib": "4.5.0",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.3",
    "@types/jest": "25.1.4",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.5.0",
    "concurrently": "5.1.0",
    "cross-env": "7.0.2",
    "gh-pages": "2.2.0",
    "jest": "24.9.0",
    "microbundle-crl": "0.13.8",
    "npm-run-all": "4.1.5",
    "react-is": "16.13.1",
    "react-test-renderer": "16.13.1",
    "size-limit": "4.5.0",
    "typescript-styled-plugin": "0.15.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.28",
    "@fortawesome/free-brands-svg-icons": "5.13.0",
    "@fortawesome/pro-light-svg-icons": "5.13.0",
    "@fortawesome/react-fontawesome": "0.1.9",
    "@tiendanube/styles": "^1.0.9",
    "@types/react": "16.9.17",
    "babel-loader": "8.1.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.1"
  },
  "files": [
    "dist"
  ],
  "size-limit": [
    {
      "limit": "16 s",
      "path": "dist/index.js"
    }
  ]
}
