{
  "name": "@tiendanube/components",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "clean-css-temp": "rm -rf css && rm -rf css-tmp",
    "build-css": "node-sass -r src -o css-tmp --output-style compressed",
    "prefix": "postcss css-tmp --use autoprefixer -d css && rm -rf css-tmp",
    "watch-css": "nodemon -e scss -x 'yarn build-css && yarn prefix'",
    "build": "rm -rf dist && tsc && node-sass src -o dist --output-style compressed",
    "watch-styles": "nodemon -e scss -x nodemon -e scss -x 'yarn build-css && yarn prefix'",
    "start:dev": "yarn watch-styles",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.28",
    "@fortawesome/free-brands-svg-icons": "5.13.0",
    "@fortawesome/pro-light-svg-icons": "5.13.0",
    "@fortawesome/react-fontawesome": "0.1.9",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "typescript": "3.9.5"
  },
  "devDependencies": {
    "@types/react": "16.9.41",
    "@types/react-dom": "16.9.8",
    "node-sass": "4.14.1",
    "nodemon": "2.0.4"
  },
  "files": [
    "dist"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
