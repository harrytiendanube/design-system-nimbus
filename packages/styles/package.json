{
  "name": "@tiendanube/styles",
  "version": "1.0.0",
  "description": "Shareable styles",
  "author": "tiendanube",
  "license": "MIT",
  "repository": "missing",
  "main": "dist/index.js",
  "style": "src/index.css",
  "sass": "src/index.scss",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "rm -rf css && rm -rf css-tmp",
    "start": "yarn clean && yarn watch-css",
    "build-css": "node-sass -r src -o css-tmp --output-style compressed",
    "prefix": "postcss css-tmp --use autoprefixer -d css && rm -rf css-tmp",
    "watch-css": "nodemon -e scss -x 'yarn build-css && yarn prefix'",
    "lint": "stylelint \"src/**/*.scss\"",
    "test": "echo Review is it necesary test",
    "format": "prettier \"src/**/*.scss\" --fix",
    "lint-staged": "echo add rules staged"
  },
  "dependencies": {
    "autoprefixer": "^9.7.6",
    "node-sass": "4.14.1",
    "nodemon": "^2.0.3",
    "postcss-cli": "7.1.1"
  },
  "files": [
    "dist"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "stylelint-config-sass-guidelines": "7.0.0",
    "stylelint-order": "4.0.0",
    "stylelint-selector-bem-pattern": "2.1.0"
  }
}
